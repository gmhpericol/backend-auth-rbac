generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  MANAGER
}

enum ContractStatus {
  DRAFT
  ACTIVE
  SUSPENDED
  TERMINATED
  EXPIRED
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELED
  EXPIRED
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum TerminationReason {
  CUSTOMER_REQUEST
  NON_PAYMENT
  BREACH
  ADMIN_DECISION
}

enum JobStatus {
  PENDING
  RUNNING
  FAILED
  COMPLETED
  DEAD
}

enum ExecutionStatus {
  RUNNING
  COMPLETED
  FAILED
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  password String
  role     Role    @default(USER)
  active   Boolean @default(true)
}

model AuditLog {
  id           String   @id @default(uuid())
  actorUserId  String
  targetUserId String
  action       String
  oldValue     String?
  newValue     String?
  createdAt    DateTime @default(now())
}

model Contract {
  id         String         @id @default(uuid())
  customerId String // owner (User sau Organization)
  status     ContractStatus @default(DRAFT)

  startDate DateTime?
  endDate   DateTime?
  signedAt  DateTime?

  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  terminatedAt      DateTime?
  terminationReason TerminationReason?

  subscriptions Subscription[]

  @@index([customerId])
  @@index([status])
  @@index([endDate])
}

model Plan {
  id          String  @id @default(uuid())
  name        String
  description String?
  priceCents  Int
  currency    String  @default("EUR")

  billingCycle BillingCycle
  features     Json

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[]

  @@unique([name, billingCycle])
  @@index([isActive])
}

model Subscription {
  id         String @id @default(uuid())
  contractId String
  planId     String

  status       SubscriptionStatus @default(ACTIVE)
  billingCycle BillingCycle

  startDate DateTime
  endDate   DateTime?

  nextBillingAt DateTime
  lastBilledAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contract Contract  @relation(fields: [contractId], references: [id])
  plan     Plan      @relation(fields: [planId], references: [id])
  invoices Invoice[]

  @@index([contractId])
  @@index([status])
  @@index([nextBillingAt])
}

model Invoice {
  id             String   @id @default(uuid())
  subscriptionId String
  periodStart    DateTime
  periodEnd      DateTime
  amountCents    Int
  currency       String

  billingKey String   @unique
  createdAt  DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id])

  @@index([subscriptionId])
}

model Job {
  id           String     @id @default(uuid())
  jobKey       String     @unique
  type         String
  payload      Json

  status       JobStatus
  attempt      Int
  maxAttempts  Int
  nextRunAt    DateTime

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  executions   JobExecution[]

  @@index([status, nextRunAt])
}

model JobExecution {
  id          String           @id @default(uuid())
  jobId       String
  job         Job              @relation(fields: [jobId], references: [id])

  attempt     Int
  status      ExecutionStatus
  startedAt   DateTime
  finishedAt  DateTime?
  error       String?

  @@unique([jobId, attempt])
}
